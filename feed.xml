---
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for freebie in site.freebies reversed %}
      {% unless freebie.hidden %}
        <item>
          <title>{{ freebie.name | xml_escape }}</title>
          <description>{{ freebie.content | xml_escape }}</description>
          <pubDate>{{ freebie.date | date_to_rfc822 }}</pubDate>
          <link>{{ freebie.url | prepend: site.baseurl | prepend: site.url }}</link>
          <guid isPermaLink="true">{{ freebie.url | prepend: site.baseurl | prepend: site.url }}</guid>
          {% if freebie.image %}
              {% assign prefix = page.image | slice: 0, 4 %}
              {% if prefix == "http" %}
                  {% assign image = page.image %}
              {% else %}
                  {% assign image = page.image | prepend: site.baseurl | prepend: site.url %}
              {% endif %}
          <enclosure url="{{ image }}" />
          {% endif %}
          {% for tag in freebie.tags %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
          {% for cat in freebie.categories %}
          <category>{{ cat | xml_escape }}</category>
          {% endfor %}
        </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>